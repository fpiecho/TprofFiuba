<div class="mainLoginContainer">
  <div class="cellPhoneContainer">
    <div class="loginHeadContent"><div><%= Time.zone.now.to_s(:time) %></div></div>
    <div class="loginContent">
      <h2>Ingresa</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", :class => "textInput", autofocus: true %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "ContraseÃ±a", :class => "textInput", autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class="rememberContainer">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ENTRAR", :class => "completeButton" %>
        </div>
      <% end %>
      
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
