<div class="mainLoginContainer">
  <div class="cellPhoneContainer">
    <div class="loginHeadContent"><div><%= Time.zone.now.to_s(:time) %></div></div>
    <div class="loginContent">
      <h2>Recuperar Contrase√±a</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", :class => "textInput", autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "ENVIAR INSTRUCCIONES", :class => "completeButton" %>
        </div>
      <% end %>
      
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>