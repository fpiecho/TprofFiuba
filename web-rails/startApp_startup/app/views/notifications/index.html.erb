<p id="notice"><%= notice %></p>

<h1>Push Notifications de <%= @mobile_app.title %> </h1> 

<table class="table table-striped">
  <thead>
    <tr>
      <th>Mensaje</th>
      <th>Fecha de env√≠o</th>
      <th><%=t '.actions', :default => "Opciones" %></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.message %></td>
        <td><%= notification.action_date.strftime("%d/%m/%Y %H:%M %p") %></td>
        <td>
        <%= link_to t('.edit', :default => "Editar"),
                      edit_notification_path(notification), :class => 'btn btn-default btn-xs', method: :get %>
         <%= link_to t('.destroy', :default => "Eliminar"),
                      notification_path(notification),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => "Nueva push notification"),
            new_notification_path + "/" + @mobile_app.id.to_s,
            :class => 'btn btn-primary', method: :get %>
